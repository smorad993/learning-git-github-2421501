name: Compile and Run Unit Tests

# This triggers the workflow on any Pull Request to the main branch
on:
  pull_request:
    branches:
      - main
      - master
  workflow_dispatch: # Allows you to run it manually for testing

jobs:
  compile-run-unittest:
    runs-on: ubuntu-latest

    steps:
      # 1. Check out the code from the Pull Request
      - name: Checkout code
        uses: actions/checkout@v4

      # 2. Set up Java and Maven (equivalent to the maven:3.6.3-jdk-11 image)
      - name: Set up JDK 11
        uses: actions/setup-java@v3
        with:
          java-version: '11'
          distribution: 'temurin'
          cache: 'maven'

      # 3. Run the Maven build (equivalent to your 'task: build')
      - name: Build with Maven
        run: |
          cd maven-unit-test/
          mvn clean install
